<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_locationdata/models/rules"
	addfieldpath="/administrator/components/com_locationdata/models/fields"
>
	<fieldset name="details">
		<!-- Default Fields. -->
		<!-- Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_LOCATIONDATA_COUNTRY_CREATED_DATE_LABEL"
			description="COM_LOCATIONDATA_COUNTRY_CREATED_DATE_DESC"
			size="22"

			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_LOCATIONDATA_COUNTRY_CREATED_BY_LABEL"

			description="COM_LOCATIONDATA_COUNTRY_CREATED_BY_DESC"
		/>
		<!-- Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"

			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_LOCATIONDATA_COUNTRY_MODIFIED_DATE_LABEL" description="COM_LOCATIONDATA_COUNTRY_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_LOCATIONDATA_COUNTRY_MODIFIED_BY_LABEL"
			description="COM_LOCATIONDATA_COUNTRY_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- Access Field. Type: Accesslevel (joomla) -->
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			default="1"

			required="false"
		/>
		<!-- Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_LOCATIONDATA_COUNTRY_ORDERING_LABEL"
			description=""
			default="0"
			size="6"

			required="false"
		/>
		<!-- Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_LOCATIONDATA_COUNTRY_VERSION_LABEL"
			description="COM_LOCATIONDATA_COUNTRY_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- Dynamic Fields. -->
		<!-- Name Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="name"
			label="COM_LOCATIONDATA_COUNTRY_NAME_LABEL"
			size="40"
			maxlength="150"
			description="COM_LOCATIONDATA_COUNTRY_NAME_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="true"
			filter="STRING"
			message="Error! Please add name here."
			hint="COM_LOCATIONDATA_COUNTRY_NAME_HINT"
		/>
		<!-- Currency Field. Type: Currency. (custom) -->
		<field
			type="currency"
			name="currency"
			label="COM_LOCATIONDATA_COUNTRY_CURRENCY_LABEL"
			description="COM_LOCATIONDATA_COUNTRY_CURRENCY_DESCRIPTION"
			class="list_class"
			multiple="false"
			required="true"
		/>
		<!-- Worldzone Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="worldzone"
			label="COM_LOCATIONDATA_COUNTRY_WORLDZONE_LABEL"
			size="40"
			maxlength="50"
			description="COM_LOCATIONDATA_COUNTRY_WORLDZONE_DESCRIPTION"
			class="text_area"
			required="false"
			filter="INT"
			message="Error! Please add zone code here."
			hint="COM_LOCATIONDATA_COUNTRY_WORLDZONE_HINT"
		/>
		<!-- Codethree Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="codethree"
			label="COM_LOCATIONDATA_COUNTRY_CODETHREE_LABEL"
			size="40"
			maxlength="3"
			description="COM_LOCATIONDATA_COUNTRY_CODETHREE_DESCRIPTION"
			class="text_area"
			required="true"
			filter="WORD"
			message="Error! Please add three-letter country code here."
			hint="COM_LOCATIONDATA_COUNTRY_CODETHREE_HINT"
		/>
		<!-- Codetwo Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="codetwo"
			label="COM_LOCATIONDATA_COUNTRY_CODETWO_LABEL"
			size="40"
			maxlength="2"
			description="COM_LOCATIONDATA_COUNTRY_CODETWO_DESCRIPTION"
			class="text_area"
			required="true"
			filter="WORD"
			message="Error! Please add two-letter country code here."
			hint="COM_LOCATIONDATA_COUNTRY_CODETWO_HINT"
		/>
		<!-- Alias Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="alias"
			label="COM_LOCATIONDATA_COUNTRY_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			filter="STRING"
			hint="COM_LOCATIONDATA_COUNTRY_ALIAS_HINT"
		/>
	</fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this country"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_locationdata"
			section="country"
		/>
	</fieldset>
</form>